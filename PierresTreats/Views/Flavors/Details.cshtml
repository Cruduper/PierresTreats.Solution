@{
  Layout = "_Layout";
}
@using PierresTreats.Models

<h1>Details for @Model.Name:</h1>

<ul>
  <li>Flavor ID: @Model.FlavorId</li>
  <li>Flavor: @Model.Name</li>
  <li>Description: @Model.Description</li>
</ul>

<h5>Treats that contain the Flavor @Model.Name</h5>
<ul>

  @if (@Model.JoinEntities.Count == 0)
  {
    <p>No treats have this flavor!</p>
  }
  else
  {
    @foreach (FlavorTreat flavT in @Model.JoinEntities)
    {
      <li>@Html.ActionLink(flavT.Treat.Name, "Details", "Treats", new {id = flavT.Treat.TreatId})</li>
    }
  }
</ul>

<div>@Html.ActionLink("Back to Flavors list", "Index", "Flavors")</div>