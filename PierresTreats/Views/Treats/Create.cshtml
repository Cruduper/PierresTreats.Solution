@{
  Layout = "_Layout";
}

@model PierresTreats.Models.Treat

<h4>Add a new a Treat</h4>

@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)

  @Html.LabelFor(model => model.Price)
  @Html.TextBoxFor(model => model.Price, new { @type = "number" })

  @Html.LabelFor(model => model.Description)
  @Html.TextBoxFor(model => model.Description)

  @Html.Label("Select Flavor")
  @Html.DropDownList("FlavorId")

  <input type="submit" value="Add new recipe" class="btn btn-default" />
}
<p>@Html.ActionLink("Show all Treats", "Index")</p>