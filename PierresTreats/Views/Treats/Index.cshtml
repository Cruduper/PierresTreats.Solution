@{
  Layout = "_Layout";
}

@using PierresTreats.Models;
@model IEnumerable<PierresTreats.Models.Treat>

<h1>Treats Available</h1>

@if (Model.Any())
{
  <ul>
    @foreach (Treat treat in Model)
    {
      <li>
        @Html.ActionLink($"{treat.Name}", "Details", new { id = treat.TreatId })

        @Html.ActionLink("EDIT", "Edit", "Treats", new {id = treat.TreatId}, new { @class = "btn btn-dark btn-sm m-1", @role="button" })  
        @Html.ActionLink("DELETE", "Delete", "Treats", new {id = treat.TreatId}, new { @class = "btn btn-dark btn-sm my-2", @role="button" })  
      </li>
    }
  </ul>
} 
else
{
  <h3>No treats have been added yet!</h3>
}

<p>@Html.ActionLink("Add new Treat", "Create")</p>

<p>@Html.ActionLink("Home", "Index", "Home")</p>